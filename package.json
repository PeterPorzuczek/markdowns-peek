{
  "name": "markdowns-peek",
  "version": "1.0.1",
  "description": "A beautiful GitHub Markdown file viewer for web applications",
  "main": "dist/markdowns-peek.js",
  "module": "dist/markdowns-peek.esm.js",
  "unpkg": "dist/markdowns-peek.min.js",
  "type": "module",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "node node_modules/rollup/dist/bin/rollup -c",
    "dev": "node node_modules/rollup/dist/bin/rollup -c -w",
    "pretest": "npm run build",
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --coverage",

    "deploy": "gh-pages -d example",
    "predeploy": "npm run build && rimraf example/markdowns-peek.js && copyfiles -f dist/markdowns-peek.js example",
    "preserve": "npm run build && rimraf example/markdowns-peek.js && copyfiles -f dist/markdowns-peek.js example",
    "serve": "npx serve example"
  },
  "keywords": [
    "github",
    "markdown",
    "viewer",
    "md",
    "file-browser",
    "npm",
    "javascript"
  ],
  "author": "Piotr Porzuczek",
  "license": "LGPL-2.1",
  "browserslist": [
    "defaults",
    "not IE 11"
  ],
  "dependencies": {
    "dompurify": "^3.0.9",
    "marked": "^12.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "copyfiles": "^2.4.1",
    "gh-pages": "^6.3.0",
    "jest": "^30.0.5",
    "jest-cucumber": "^4.5.0",
    "jest-environment-jsdom": "^30.0.5",
    "jsdom": "^26.1.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.9.6",
    "text-encoding": "^0.7.0"
  }
}
